BoxLayout:
    orientation: 'vertical'
    size_hint: 1, None
    height: '150dp'

    # Top section with input field, button, and output label
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: "48dp"

        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
            halign: 'center'
            size_hint_x: 1/3

        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text)
            size_hint_x: 1/3

        Label:
            id: output_label
            font_size: 48
            color: (1, 0, 1, 1)
            size_hint_x: 1/3
            halign: 'center'

    # Bottom section with a label
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: "48dp"
        Label:
            text: "Enter a number and press 'Square'"
            size_hint_x: 1
            halign: 'center'
            font_size: 24
